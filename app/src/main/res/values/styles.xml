<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tabColorBackground</item>
        <item name="colorPrimaryDark">@color/topBackground</item>
        <item name="colorAccent">@color/tabColorTextSelected</item>

        <item name="actionMenuTextColor">@color/blue</item>
        <item name="android:actionMenuTextColor">@color/blue</item>
    </style>


    <style name="tab_layout_style" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>
        <item name="tabSelectedTextColor">@color/tabColorTextSelected</item>
    </style>


    <style name="tab_layout_style_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/tabColorText</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
