<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/listItemBackground"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp">

        <LinearLayout android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dip">

            <TextView
                android:id="@+id/locationShort"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:background="@drawable/circle"
                android:textColor="@color/toolBar"
                android:textSize="18dip"
                android:text="C0"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Blok C - prízemie"
            android:textColor="#616161"
            android:typeface="sans"
            android:textSize="16dip"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/infoUpdatedAt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/location"
            android:textColor="@color/fragmentColor"
            android:textSize="16dip"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Aktualizácia" />



        <ImageView
            android:id="@+id/img_info"
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/info3"
            android:onClick="exampleImgButton"/>


    </RelativeLayout>

</LinearLayout>